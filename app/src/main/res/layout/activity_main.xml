<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnListMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="27dp"
        android:paddingVertical="15dp"
        android:text="List Movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNowPlayingMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#dfefdd"
        android:text="Now Playing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListMovie" />

    <Button
        android:id="@+id/btnTrailerMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="37dp"
        android:paddingVertical="15dp"
        android:text="Trailer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNowPlayingMovie" />


</androidx.constraintlayout.widget.ConstraintLayout>